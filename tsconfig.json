{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "types": ["google-apps-script"],
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}